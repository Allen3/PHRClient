<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#3399ff"
        >

        <Button
            android:id="@+id/message_back"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="返回"
            android:textSize="20dp"
            android:background="#00000000"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:text="资讯"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#00000000"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:background="#e6e6fa"
        >

        <LinearLayout
            android:id="@+id/healthinformation"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dip"
            android:layout_marginTop="50dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="#ffffff"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:text="  健康资讯"
                android:textSize="25dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text=">"
                android:textSize="30dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/druginformation"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dip"
            android:layout_marginTop="130dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="#ffffff"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:text="  药品信息"
                android:textSize="25dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text=">"
                android:textSize="30dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/slowmanagement"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dip"
            android:layout_marginTop="181dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="#ffffff"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:text="  慢病管理"
                android:textSize="25dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text=">"
                android:textSize="30dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/immunization"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dip"
            android:layout_marginTop="232dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="#ffffff"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:text="  计划免疫"
                android:textSize="25dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text=">"
                android:textSize="30dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/news"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dip"
            android:layout_marginTop="283dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="#ffffff"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:text="  新闻频道"
                android:textSize="25dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text=">"
                android:textSize="30dp"
                android:gravity="center"/>

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>